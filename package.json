{
  "name": "dropshipping-app",
  "version": "1.0.0",
  "main": "index.js",
  "private": true,
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "dev": "npm run --workspaces dev",
    "build": "npm run --workspaces build",
    "lint": "npm run --workspaces lint",
    "test": "npm run --workspaces test",
    "format": "prettier --write \"**/*.{ts,tsx,md}\""
  },
  "devDependencies": {
    "prettier": "^2.8.8"
  }
}